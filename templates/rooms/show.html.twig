{% extends 'base.html.twig' %}

{% block title %}Room number: {{ room.id }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="left-side col-lg-6">
            <h1>Room type: {{ room.type }}</h1>
            <p>Price per night: {{ room.price }}</p>
            <a class="btn btn-primary" href="/">Go back</a><br>
            <a class="btn btn-warning mt-4" href="/book/{{ room.id }}">Book this room</a>
        </div>
        <div class="right-side offset-lg-2 col-lg-4">
            <img src="../../images/{{room.img }}" class="col-lg-12" alt="">
        </div>
    </div>
</div>
{% endblock %}